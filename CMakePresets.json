{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "ASR_BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ASR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "asan",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined",
                "ASR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "tsan",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-O1 -g -fsanitize=thread -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread",
                "ASR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "coverage",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ASR_ENABLE_COVERAGE": "ON",
                "ASR_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "cuda",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "ASR_ENABLE_CUDA": "ON",
                "ASR_BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "asan",
            "configurePreset": "asan",
            "configuration": "Debug"
        },
        {
            "name": "tsan",
            "configurePreset": "tsan",
            "configuration": "Debug"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "configuration": "Debug"
        },
        {
            "name": "cuda",
            "configurePreset": "cuda",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {"outputOnFailure": true}
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "output": {"outputOnFailure": true}
        },
        {
            "name": "tsan",
            "configurePreset": "tsan",
            "output": {"outputOnFailure": true},
            "environment": {
                "TSAN_OPTIONS": "suppressions=${sourceDir}/tsan_suppressions.txt"
            }
        }
    ]
}
